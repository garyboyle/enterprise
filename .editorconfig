# Root file for EditorConfig
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{html,css,scss,json,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = ta
